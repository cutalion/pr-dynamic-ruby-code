@import 'prism/themes/prism-okaidia.css'
@import 'prism/plugins/line-numbers/prism-line-numbers.css'
// Check out "bower_components/prism/themes/" for available themes

background-image-slide(path)
  background-image: url(path)
  background-repeat: no-repeat
  background-position: center center
  background-size: contain

table
  width: 100%

code[class*="language-"], pre[class*="language-"]
  display: inline-block

section
  img
    max-width: 100%


.bespoke-slide.immediate
  transition: none

.contacts
  margin-top: 1em
  font-size: smaller

.links
  a
    display: block
    text-align: left
  a:nth-of-type(n+2)
    margin-top: .5em

.bespoke-backdrop-active
  &.rubocop
    background-image-slide "/images/rubocop.png"

  &.rubycritic
    background-image-slide "/images/rubycritic.png"

  &.metric_fu
    background-image-slide "/images/metric_fu.png"

  &.simplecov
    background-image-slide "/images/simplecov.png"

  &.diagram
    background-color: #00A388

  &.graphviz
    background-color: white

  &.end
    background-image-slide "/images/clasters.svg"
    opacity: 0.7

section[data-bespoke-backdrop~=graphviz]
  color: black
  text-shadow: none
